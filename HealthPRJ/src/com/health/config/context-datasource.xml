        http://www.springframework.org/schema/jdbc  http://www.springframework.org/schema/jdbc/spring-jdbc-4.0.xsd">
   
    <!-- MySQL Connection Pool -->
    <bean id="dataSource" class="org.springframework.jdbc.datasource.DriverManagerDataSource" lazy-init="false">   
	    <property name="driverClassName" value="com.mysql.jdbc.Driver" />
	    <property value="jdbc:mysql://192.168.170.92:3306/leeajin?useSSL=false&amp;allowMultiQueries=true&amp;serverTimezone=Asia/Seoul" name="url"/>
	    <property name="username" value="LEEAJIN" /> <!-- MySQL 계정 : 아이디 -->
	    <property name="password" value="1234" /> <!-- MySQL 계정 : 비밀번호 -->
	</bean>
	
</beans>